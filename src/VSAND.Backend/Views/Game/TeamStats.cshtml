@model VSAND.Data.ViewModels.GameReport.GameReport;

@{
    ViewData["Title"] = Model.Name + "| Team Stats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ await Html.RenderPartialAsync("_headerPartial"); }

<div id="vueApp" v-cloak>
    <teamstats v-bind:game-report="gameReport" v-bind:is-admin="isAdmin"></teamstats>
</div>


@section Scripts {
    <script type="text/javascript">
        window.gameReport = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
    </script>

    <environment include="Development">
        <script src="~/app/game-teamstats.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/app/game-teamstats.min.js" asp-append-version="true"></script>
    </environment>
}
