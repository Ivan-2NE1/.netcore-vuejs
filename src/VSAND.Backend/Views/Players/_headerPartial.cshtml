@{ 
    var playerName = "";
    if (ViewData.ContainsKey("PlayerName"))
    {
        playerName = ViewData["PlayerName"].ToString();
    }
}
<div class="row">
    <!-- col -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fas fa-user-circle fa-fw"></i>
            Players

            @if (playerName != "")
            {
                <text>
                    <span>
                        <span class="fa fa-chevron-right"></span> <strong>@playerName</strong>
                    </span>
                </text>
            }
        </h1>
    </div>
    <!-- end col -->
    <!-- right side of the page with the area navigation -->
    <!-- col -->
    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8 text-right">
        
    </div>
    <!-- end col -->

</div>
