@model VSAND.Data.ViewModels.SelfProvision.SelfProvisionForm

@{
    string logoUrl = ViewData["LogoUrl"].ToString();
    string siteName = ViewData["SiteName"].ToString();
    string siteUrl = ViewData["SiteUrl"].ToString();
}

<html lang="en">
<head>
    <meta charset="utf-8">

    <title>Self Provisioning | @siteName</title>

    <meta name="description" content="Login">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no, minimal-ui">

    <!-- Call App Mode on ios devices -->
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <!-- Remove Tap Highlight on Windows Phone IE -->
    <meta name="msapplication-tap-highlight" content="no">

    <!-- base css -->
    <environment include="Development">
        <link rel="stylesheet" media="screen, print" href="~/sa4/css/bootstrap.css" asp-append-version="true">
        <link rel="stylesheet" media="screen, print" href="~/sa4/css/app.core.css" asp-append-version="true">
        <link rel="stylesheet" media="screen, print" href="~/sa4/css/app.custom.css" asp-append-version="true">
        <link rel="stylesheet" media="screen, print" href="~/sa4/css/app.icons.css" asp-append-version="true">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" media="screen, print" href="~/sa4/css/bootstrap.min.css" asp-append-version="true">
        <link rel="stylesheet" media="screen, print" href="~/sa4/css/app.core.min.css" asp-append-version="true">
        <link rel="stylesheet" media="screen, print" href="~/sa4/css/app.custom.min.css" asp-append-version="true">
        <link rel="stylesheet" media="screen, print" href="~/sa4/css/app.icons.min.css" asp-append-version="true">
    </environment>

    <!-- FontAwesome -->
    <link rel="stylesheet" media="screen, print" href="~/fontawesome/all.min.css" asp-append-version="true">

    @* TODO: This needs to be pub specific *@
    <!-- FAVICONS -->
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
</head>
<body>
    <div class="page-wrapper">
        <div class="page-inner bg-brand-gradient">
            <div class="page-content-wrapper bg-transparent m-0">
                <div class="height-10 w-100 shadow-lg px-4 bg-brand-gradient">
                    <div class="d-flex align-items-center container p-0">
                        <div class="page-logo width-mobile-auto m-0 align-items-center justify-content-center p-0 bg-transparent bg-img-none shadow-0 height-9">
                            <a href="javascript:void(0)" class="page-logo-link press-scale-down d-flex align-items-center">
                                <img src="~/images/@logoUrl" alt="@siteName" aria-roledescription="logo" style="max-width:30px;" />
                                <span class="page-logo-text mr-1">@siteName</span>
                            </a>
                        </div>
                        <span class="text-white opacity-50 ml-auto mr-2 hidden-sm-down">
                            Already a have your own account?
                        </span>
                        <a href="/Account/Logout" class="btn-link text-white ml-auto ml-sm-0">
                            Logout and Sign in again
                        </a>
                    </div>
                </div>
                <div class="flex-1">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <partial name="~/Views/Shared/_ScriptBasePlugins.cshtml" />
</body>
</html>

