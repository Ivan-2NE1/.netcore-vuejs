@{ 
    string logoUrl = ViewData["LogoUrl"].ToString();
    string siteName = ViewData["SiteName"].ToString();
}
<div class="page-logo">
    <a href="#" class="page-logo-link press-scale-down d-flex align-items-center" data-toggle="modal" data-target="#modal-shortcut">
        <img src="~/images/@logoUrl" alt="@siteName" aria-roledescription="logo" style="max-width:30px;"/>
        <span class="page-logo-text mr-1">@siteName</span>
        <i class="fal fa-angle-down d-inline-block ml-1 fs-lg color-primary-300"></i>
    </a>
</div>
