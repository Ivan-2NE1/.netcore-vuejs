<script>
    // ping a dummy keepalive handler every two minutes to refresh ASP.NET session cookie
    jQuery(document).ready(function ($) {
        setInterval(function () {
            $.ajax({
                type: 'GET',
                url: '/keepalive',
                cache: false,
                dataType: 'json'
            });
        }, 120000);
    });
</script>
