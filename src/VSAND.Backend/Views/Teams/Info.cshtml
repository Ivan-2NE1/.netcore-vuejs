@model VSAND.Data.Entities.VsandTeam;

@{
    ViewData["Title"] = "Info";
    Layout = "_teamLayout.cshtml";
}

<div id="vueApp" v-cloak>
    <p>Need editable section for team info, including coach info, etc.</p>
</div>

@section Scripts {
    <script type="text/javascript">
        window.team = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
    </script>

    <environment include="Development">
        <script src="~/app/team-info.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/app/team-info.min.js" asp-append-version="true"></script>
    </environment>
}
