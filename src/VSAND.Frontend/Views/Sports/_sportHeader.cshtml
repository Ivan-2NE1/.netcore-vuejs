@model VSAND.Data.Entities.VsandSport;

@{
    // Set which of the nav tabs is active based on the current view
    string activeTab = (ViewData.ContainsKey("ActiveTab")) ? ViewData["ActiveTab"].ToString() : "";
    string homeActiveClass = (activeTab == "Home") ? "active" : "";
    //string scoresActiveClass = (activeTab == "Scores") ? "active" : "";
    string scheduleActiveClass = (activeTab == "Schedule") ? "active" : "";
    string standingsActiveClass = (activeTab == "Standings") ? "active" : "";
    string rankingsActiveClass = (activeTab == "Rankings") ? "active" : "";
    string statsActiveClass = (activeTab == "Stats") ? "active" : "";
    string powerPointsActiveClass = (activeTab == "PowerPoints") ? "active" : "";
    string bracketsActiveClass = (activeTab == "Brackets") ? "active" : "";

    string basePath = ViewData["BasePath"].ToString();
}

<div class="appsecondarynav sport-header">
    <div class="container">
        <div class="row">
            <div class="col-auto col-sm-12 col-lg-auto">
                <div class="d-flex align-items-center sport-brand">
                    <strong class="sport-name">@Model.Name</strong>
                </div>
            </div>
            <div class="col sport-nav">
                <nav class="navbar navbar-expand-md">
                    <ul class="navbar-nav">
                        <li class="nav-item @homeActiveClass">
                            <a class="nav-link" href="@basePath">Home</a>
                        </li>
                    </ul>
                    <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#sportNavBarDropdown" aria-controls="sportNavBarDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        More <i class="far fa fa-chevron-down expander"></i><i class="far fa fa-chevron-up collapser"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="sportNavBarDropdown">
                        <ul class="navbar-nav">
                            @*<li class="nav-item @scoresActiveClass">
                                <a class="nav-link" href="@basePath/scores">Scores</a>
                            </li>*@
                            <li class="nav-item @scheduleActiveClass">
                                <a class="nav-link" href="@basePath/schedule">Scores &amp; Schedules</a>
                            </li>
                            <li class="nav-item @standingsActiveClass">
                                <a class="nav-link" href="@basePath/standings">Standings</a>
                            </li>
                            <li class="nav-item @rankingsActiveClass">
                                <a class="nav-link" href="@basePath/rankings">Rankings</a>
                            </li>
                            <li class="nav-item @statsActiveClass">
                                <a class="nav-link" href="@basePath/stats">Stats</a>
                            </li>
                            @if (Model.EnablePowerPoints.HasValue && Model.EnablePowerPoints.Value)
                            {
                                <li class="nav-item @powerPointsActiveClass">
                                    <a class="nav-link" href="@basePath/powerpoints">Power Points</a>
                                </li>
                            }
                            <li class="nav-item @bracketsActiveClass">
                                <a class="nav-link" href="@basePath/brackets">Brackets</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>